<!DOCTYPE html>
<html>
  <head>
    <title>TumblerApp</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', href= 'https://fonts.googleapis.com/css?family=Open+Sans:400,700&display=swap' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id='sidebar'>
      <ul>
        <li class='category'>
          <%= link_to "Tumbler" , root_path %>
        </li>
        <li>
          <%= link_to "Posts" , root_path %>
        </li>
        <li>
          <%= link_to "About", about_path %>
        </li>
      </ul>
      <p class='sign_in'>User Login</p>
    </div>
    <div id='main_content'>
      <div id='header'>
        <% if current_page?(root_path) %>
          <p>Post Feed</p>
        <% elsif current_page?(about_path) %>
          <p> My Site </p>
        <% else %>
          <%= link_to "Back to post feed", root_path %>
        <% end %>
        <div class="buttons">
          <button class='button'>
            <%= link_to "Make Post" , new_post_path %>
          </button>
          <button class='button'>
            <%= link_to "Log Out" , new_post_path %>
          </button>
        </div>
      </div>

      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert") %>
      <% end %>

      <%= yield %>
    </div>   
  </body>
</html>
